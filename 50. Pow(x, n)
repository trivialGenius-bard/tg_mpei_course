class Solution {
public:
    double myPow(double x, long int n) {
    double res;
    if (n<0)
    {
        res = myPow(1/x, -n);
    } 
    else
    {
        if (n==0)
             res = 1;
        else
            if (n%2 == 1)
                res = x*myPow(x, n-1);
            else
            {
                double a1 = myPow(x, n/2);
                res = a1*a1;                
            }
        
    }
        return res;
    }
    
};
