// https://leetcode.com/problems/pascals-triangle/
class Solution {
public:
   vector<vector<int>>generate(int numRows) {
  vector<vector<int>>g(numRows);
  for (int i = 0; i < numRows; i++) {
    for (int j = 0; j < i+1; j++) {
      if (j == 0 || j == i) {
        g[i].push_back(1);
      }
      else {
        g[i].push_back(g[i - 1][j - 1] + g[i - 1][j]);
      }
    }
  }
  return g;
}
};
