// https://leetcode.com/problems/power-of-three/
class Solution {
public:
    bool isPowerOfThree(int n) {
        bool pot=true;
        if (n<=0)
            pot = false;
        while (pot & n>1)
        {
            if (n%3 != 0)
                pot = false;
            else
                n=n/3;
        }
        return pot;
    }
};
